{
  "name": "@hmh/text-input",
  "version": "0.1.0",
  "description": "Text Input Component",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p src",
    "prepare": "npm run build; npm run sass",
    "sass": "node-sass src/sass -r -o dist/css",
    "sass-watch": "node-sass src/sass -r -o dist/css -w",
    "watch": "npm run prepare; concurrently --names 'build,sass' -c 'bgBlue,bgMagenta' 'npm run build -- -w' 'npm run sass -- -w'",
    "test": "lit-element-tester dist/components/text-input.js"
  },
  "keywords": [],
  "author": "Dominique Rochefort <dominique.rochefort@hmhco.com>",
  "license": "ISC",
  "dependencies": {
    "@material/textfield": "^0.38.1",
    "@polymer/lit-element": "^0.5.2",
    "lit-html": "^0.10.2"
  },
  "devDependencies": {
    "@hmh/lit-element-tester": "latest",
    "chai": "^4.1.2",
    "concurrently": "^3.6.1",
    "mocha": "^5.2.0",
    "node-sass": "^4.9.3",
    "source-map-support": "^0.5.8",
    "typescript": "^3.0.1"
  }
}
