{
    "name": "@hmh/text-input",
    "version": "0.0.15",
    "description": "Assessment System Text Input Component",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "start": "polyserve -o",
        "build": "tsc -p src",
        "prepare": "npm run build; npm run sass",
        "sass": "node-sass src/sass -r -o dist/css",
        "sass-watch": "node-sass src/sass -r -o dist/css -w",
        "watch": "npm run prepare; concurrently --names 'build,sass' -c 'bgBlue,bgMagenta' 'npm run build -- -w' 'npm run sass -- -w' 'npm-watch'",
        "test": "lit-element-tester dist/components/text-input.js",
        "test-dev": "lit-element-tester -d",
        "_generateDocs": "polymer analyze ./dist/components/text-input.js > ./dist/components/analysis.json"
    },
    "keywords": [],
    "author": "Dominique Rochefort <dominique.rochefort@hmhco.com>",
    "license": "ISC",
    "dependencies": {
        "@hmh/component-base": "latest",
        "@hmh/response-validation": "^0.0.15",
        "@material/textfield": "latest"
    },
    "devDependencies": {
        "@hmh/lit-element-tester": "latest",
        "@polymer/iron-component-page": "next",
        "@polymer/iron-demo-helpers": "latest",
        "@webcomponents/webcomponentsjs": "^2.0.2",
        "chai": "^4.1.2",
        "concurrently": "^4.0.1",
        "mocha": "^5.2.0",
        "node-sass": "^4.9.3",
        "npm-watch": "latest",
        "polyserve": "^0.27.12",
        "source-map-support": "^0.5.9",
        "typescript": "^3.0.1",
        "typescript-styled-plugin": "^0.10.0"
    },
    "watch": {
        "_generateDocs": "src/components/**/*.*"
    },
    "gitHead": "bcd0e93c78068dcdd5af96e8611bebc569aae7b3"
}
